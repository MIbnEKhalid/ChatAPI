                height: calc(100dvh - 80px);
                display: flex;
                flex-direction: column;
            }

            .chat-messages {
                flex: 1;
                overflow-y: auto;
                padding: 0.25rem;
                -webkit-overflow-scrolling: touch;
                overscroll-behavior: auto; /* Enable pull-to-refresh */
