        .chat-list {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            list-style: none;
        }

        .chat-list::-webkit-scrollbar {
            width: 6px;
        }

        .chat-list::-webkit-scrollbar-track {
            background: var(--input-bg);
            border-radius: 3px;
        }

        .chat-list::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 3px;
