<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | MBK_AI</title>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --bg: #050505; --panel: #0a0a0a; --border: #333;
            --primary: #00ff41; --text: #e0e0e0; --dim: #666;
            --danger: #ff003c;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: 'JetBrains Mono', monospace; }
        body { background: var(--bg); color: var(--text); display: flex; min-height: 100vh; }
        
        /* Layout */
        .sidebar { width: 250px; background: var(--panel); border-right: 1px solid var(--border); padding: 20px; display: flex; flex-direction: column; }
        .main { flex: 1; padding: 30px; overflow-y: auto; }
        
        /* Sidebar */
        .brand { color: var(--primary); font-size: 1.2rem; font-weight: bold; margin-bottom: 40px; }
        .nav-link { display: block; padding: 12px; color: var(--dim); text-decoration: none; border-radius: 4px; margin-bottom: 5px; transition: 0.2s; }
        .nav-link:hover, .nav-link.active { background: rgba(0, 255, 65, 0.1); color: var(--primary); }
        .nav-link i { width: 24px; }
        
        /* Stats Grid */
        .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 40px; }
        .card { background: var(--panel); border: 1px solid var(--border); padding: 20px; border-radius: 6px; }
        .stat-value { font-size: 2rem; color: #fff; font-weight: bold; margin: 10px 0; }
        .stat-label { color: var(--dim); font-size: 0.9rem; text-transform: uppercase; }
        
        /* Tables */
        .table-container { background: var(--panel); border: 1px solid var(--border); border-radius: 6px; overflow: hidden; margin-bottom: 30px; }
        .table-header { padding: 15px 20px; border-bottom: 1px solid var(--border); font-weight: bold; color: var(--primary); display: flex; justify-content: space-between; align-items: center; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 15px 20px; text-align: left; border-bottom: 1px solid var(--border); }
        th { color: var(--dim); font-size: 0.8rem; text-transform: uppercase; font-weight: normal; }
        tr:last-child td { border-bottom: none; }
        tr:hover { background: rgba(255,255,255,0.02); }
        
        .badge { padding: 4px 8px; border-radius: 4px; font-size: 0.75rem; background: #222; color: #fff; }
        
        /* Chart Placeholder */
        .chart-box { height: 200px; display: flex; align-items: flex-end; gap: 5px; padding: 20px 0; }
        .bar { flex: 1; background: var(--primary); opacity: 0.5; min-width: 5px; transition: height 0.3s; }
        .bar:hover { opacity: 1; }
    </style>
</head>
<body>

    <nav class="sidebar">
        <div class="brand">MBK_ADMIN</div>
        <a href="/admin/dashboard" class="nav-link active"><i class="fas fa-chart-line"></i> Dashboard</a>
        <a href="/admin/users" class="nav-link"><i class="fas fa-users"></i> Users</a>
        <a href="/admin/chats" class="nav-link"><i class="fas fa-comments"></i> Chat Logs</a>
        <div style="flex:1"></div>
        <a href="/dashboard" class="nav-link"><i class="fas fa-sign-out-alt"></i> Exit Admin</a>
    </nav>

    <main class="main">
        <h2 style="margin-bottom: 20px;">SYSTEM_OVERVIEW</h2>
        
        <!-- Stats Cards -->
        <div class="grid">
            <div class="card">
                <div class="stat-label">Total Chats</div>
                <div class="stat-value">{{stats.total_chats}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Unique Users</div>
                <div class="stat-value">{{stats.unique_users}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Messages Today</div>
                <div class="stat-value">{{stats.messages_today}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Active Users</div>
                <div class="stat-value">{{stats.active_users_today}}</div>
            </div>
        </div>

        <!-- Hourly Chart (Simple CSS) -->
        <div class="card" style="margin-bottom: 30px;">
            <div class="stat-label">Traffic Volume (24h)</div>
            <div class="chart-box" id="chart">
                <!-- JS will inject bars here -->
            </div>
        </div>

        <div class="grid" style="grid-template-columns: 2fr 1fr;">
            <!-- Recent Chats Table -->
            <div class="table-container">
                <div class="table-header">RECENT ACTIVITY</div>
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Time</th>
                            <th>Msgs</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recentChats}}
                        <tr>
                            <td>{{this.username}}</td>
                            <td>{{this.created_at}}</td>
                            <td><span class="badge">{{this.message_count}}</span></td>
                            <td style="font-size:0.8rem; color:#666;">{{this.id}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Top Users Table -->
            <div class="table-container">
                <div class="table-header">TOP USERS</div>
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Msgs</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each topUsers}}
                        <tr>
                            <td>{{this.username}}</td>
                            <td style="text-align:right;">{{this.total_messages}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </main>

    <script>
        // Simple visualization for hourly data
        const data = JSON.parse('{{hourlyData}}');
        const max = Math.max(...data, 1);
        const chart = document.getElementById('chart');
        
        data.forEach((val, hour) => {
            const h = (val / max) * 100;
            const bar = document.createElement('div');
            bar.className = 'bar';
            bar.style.height = h + '%';
            bar.title = `Hour ${hour}: ${val} msgs`;
            chart.appendChild(bar);
        });
    </script>
</body>
</html>