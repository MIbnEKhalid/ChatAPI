<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | MBK_AI</title>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --bg: #050505; --panel: #0a0a0a; --border: #333;
            --primary: #00ff41; --text: #e0e0e0; --dim: #666;
            --danger: #ff003c;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: 'JetBrains Mono', monospace; }
        body { background: var(--bg); color: var(--text); display: flex; min-height: 100vh; overflow: hidden; }
        
        .sidebar { width: 250px; background: var(--panel); border-right: 1px solid var(--border); padding: 20px; display: flex; flex-direction: column; flex-shrink: 0; }
        .main { flex: 1; padding: 30px; overflow-y: auto; width: 100%; }
        
        .brand { color: var(--primary); font-size: 1.2rem; font-weight: bold; margin-bottom: 40px; }
        .nav-link { display: block; padding: 12px; color: var(--dim); text-decoration: none; border-radius: 4px; margin-bottom: 5px; transition: 0.2s; }
        .nav-link:hover, .nav-link.active { background: rgba(0, 255, 65, 0.1); color: var(--primary); }
        .nav-link i { width: 24px; }
        
        .grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 30px; }
        .card { background: var(--panel); border: 1px solid var(--border); padding: 25px; border-radius: 6px; }
        .stat-value { font-size: 2.5rem; color: #fff; font-weight: bold; margin: 10px 0; }
        .stat-label { color: var(--dim); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; }
        
        .chart-section { margin-bottom: 30px; background: var(--panel); border: 1px solid var(--border); border-radius: 6px; padding: 20px; }
        .chart-box { height: 250px; display: flex; align-items: flex-end; gap: 5px; padding-top: 20px; }
        .bar { flex: 1; background: var(--primary); opacity: 0.6; min-width: 5px; transition: height 0.3s; position: relative; }
        .bar:hover { opacity: 1; }
        
        .table-section { background: var(--panel); border: 1px solid var(--border); border-radius: 6px; overflow: hidden; }
        .table-header { padding: 15px 25px; border-bottom: 1px solid var(--border); font-weight: bold; color: var(--primary); letter-spacing: 1px; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 15px 25px; text-align: left; border-bottom: 1px solid var(--border); }
        th { color: var(--dim); font-size: 0.8rem; text-transform: uppercase; font-weight: normal; }
        tr:last-child td { border-bottom: none; }
        tr:hover { background: rgba(255,255,255,0.02); }
        
        /* Mobile responsive */
        @media (max-width: 1200px) {
            .grid { grid-template-columns: repeat(2, 1fr); }
        }
    </style>
</head>
<body>

    <nav class="sidebar">
        <div class="brand">MBK_ADMIN</div>
        <a href="/admin/dashboard" class="nav-link active"><i class="fas fa-chart-line"></i> Dashboard</a>
        <a href="/admin/users" class="nav-link"><i class="fas fa-users"></i> Users</a>
        <a href="/admin/chats" class="nav-link"><i class="fas fa-comments"></i> Chat Logs</a>
        <div style="flex:1"></div>
        <a href="/dashboard" class="nav-link"><i class="fas fa-sign-out-alt"></i> Exit Admin</a>
    </nav>

    <main class="main">
        <h2 style="margin-bottom: 30px;">SYSTEM_OVERVIEW</h2>
        
        <div class="grid">
            <div class="card">
                <div class="stat-label">Total Conversations</div>
                <div class="stat-value">{{stats.total_chats}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Unique Users</div>
                <div class="stat-value">{{stats.unique_users}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Active Today</div>
                <div class="stat-value">{{stats.active_users_today}}</div>
            </div>
            <div class="card">
                <div class="stat-label">Deleted Logs</div>
                <div class="stat-value" style="color:var(--danger)">{{stats.deleted_chats}}</div>
            </div>
        </div>

        <div class="chart-section">
            <div class="stat-label">Traffic Volume (Last 24 Hours)</div>
            <div class="chart-box" id="chart"></div>
        </div>

        <div class="table-section">
            <div class="table-header">RECENT ACTIVITY</div>
            <table>
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Timestamp</th>
                        <th>Messages</th>
                        <th>Status</th>
                        <th>ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recentChats}}
                    <tr>
                        <td><strong>{{this.username}}</strong></td>
                        <td>{{this.created_at}}</td>
                        <td>{{this.message_count}}</td>
                        <td>
                            {{#if this.is_deleted}}
                                <span style="color:var(--danger)">DELETED</span>
                            {{else}}
                                <span style="color:var(--primary)">ACTIVE</span>
                            {{/if}}
                        </td>
                        <td style="font-family:monospace; color:var(--dim);">{{this.id}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </main>

    <script>
        const data = JSON.parse('{{hourlyData}}');
        const max = Math.max(...data, 5); // Avoid div by zero
        const chart = document.getElementById('chart');
        
        data.forEach((val, hour) => {
            const h = (val / max) * 100;
            const bar = document.createElement('div');
            bar.className = 'bar';
            bar.style.height = Math.max(h, 5) + '%'; // Min height so 0 isn't invisible
            bar.title = `${hour}:00 - ${val} messages`;
            chart.appendChild(bar);
        });
    </script>
</body>
</html>