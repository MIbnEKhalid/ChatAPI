        .cta-buttons { display: flex; gap: 1rem; margin-top: 2rem; flex-wrap: wrap; }

        .tech-element { position: absolute; opacity: 0.08; z-index: 1; animation: float 8s ease-in-out infinite; color: var(--primary); }
        .tech-element:nth-child(1) { top: 15%; left: 8%; font-size: 4.5rem; animation-delay: 0s; }
        .tech-element:nth-child(2) { top: 65%; left: 85%; font-size: 3.5rem; animation-delay: 1.5s; color: var(--secondary); }
        .tech-element:nth-child(3) { top: 25%; left: 75%; font-size: 3rem; animation-delay: 3s; }
        .tech-element:nth-child(4) { top: 75%; left: 15%; font-size: 5rem; animation-delay: 4.5s; color: var(--success); }
        @keyframes float { 0%, 100% { transform: translateY(0) rotate(0deg); } 50% { transform: translateY(-25px) rotate(8deg); } }

        .section { padding: 100px 5%; position: relative; }
        .section-darker { background-color: var(--darker); }
        .section-title { text-align: center; margin-bottom: 60px; font-size: 2.5rem; position: relative; display: inline-block; left: 50%; transform: translateX(-50%); }
        .section-title::after { content: ''; position: absolute; bottom: -10px; left: 50%; transform: translateX(-50%); width: 80px; height: 4px; background: var(--gradient); border-radius: 2px; }
        .section-subtitle { text-align: center; max-width: 700px; margin: -40px auto 60px auto; color: var(--gray); font-size: 1.1rem; }

        .services-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; max-width: 1200px; margin: 0 auto; }
        .service-card { background: var(--dark-light); padding: 2.5rem 2rem; border-radius: var(--radius-lg); transition: var(--transition); border: 1px solid var(--glass-border); position: relative; overflow: hidden; text-align: center; }
        .service-card::before { content: ''; position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: radial-gradient(circle, var(--primary-light) 0%, transparent 40%); opacity: 0; transition: opacity 0.5s ease, transform 0.5s ease; transform: scale(0.5); z-index: 0; }
        .service-card:hover { transform: translateY(-10px); box-shadow: var(--shadow-lg); border-color: var(--primary); }
        .service-card:hover::before { opacity: 0.5; transform: scale(1); }
        .service-icon { font-size: 2.8rem; margin-bottom: 1.5rem; background: var(--gradient); -webkit-background-clip: text; background-clip: text; color: transparent; display: inline-block; position: relative; z-index: 1; }
        .service-card h3 { font-size: 1.5rem; margin-bottom: 1rem; color: var(--lighter); position: relative; z-index: 1; }
        .service-card p { color: var(--gray); font-size: 0.95rem; line-height: 1.7; position: relative; z-index: 1; }

        .work-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; max-width: 1200px; margin: 0 auto; }
        .work-card { background: var(--dark-light); border-radius: var(--radius-md); padding: 2rem; border: 1px solid var(--glass-border); transition: var(--transition); position: relative; overflow: hidden; display: flex; flex-direction: column;}
        .work-card:hover { transform: translateY(-8px); box-shadow: var(--shadow-md); border-color: var(--secondary); }
        .work-card::before { content: ''; position: absolute; top: 0; left: 0; width: 5px; height: 100%; background: var(--gradient); transition: var(--transition); }
        .work-card:hover::before { background: linear-gradient(135deg, var(--secondary), var(--primary)); }
        .work-card h3 { font-size: 1.6rem; margin-bottom: 1rem; color: var(--lighter); display: flex; align-items: center; gap: 10px; }
        .work-card h3 i { background: var(--gradient); -webkit-background-clip: text; background-clip: text; color: transparent; font-size: 1.8rem; }
        .work-card p { color: var(--gray); margin-bottom: 1.5rem; font-size: 0.95rem; flex-grow: 1; }
        .work-card .btn { margin-top: auto; padding: 10px 20px; font-size: 0.9rem; align-self: flex-start; }

        .about-content, .approach-content { max-width: 900px; margin: 0 auto; text-align: center; background: var(--dark-light); padding: 3rem; border-radius: var(--radius-xl); box-shadow: var(--shadow-md); border: 1px solid var(--glass-border); }
        .about-content h2, .approach-content h2 { font-size: 2rem; color: var(--lighter); margin-bottom: 1.5rem; }
        .about-content p, .approach-content p { font-size: 1.1rem; color: var(--gray); line-height: 1.8; margin-bottom: 1.5rem; }
        .about-content p:last-child, .approach-content p:last-child { margin-bottom: 0; }
        .approach-content ul { list-style: none; padding-left: 0; margin-bottom: 1.5rem; }
        .approach-content li { font-size: 1.1rem; color: var(--gray); line-height: 1.8; margin-bottom: 0.8rem; text-align: left; padding-left: 1.5rem; position: relative; }
        .approach-content li::before { content: '✓'; color: var(--primary); position: absolute; left: 0; font-weight: bold; }


        .team-section-content { background: var(--darker); border-radius: var(--radius-xl); text-align: center; }
        .team-grid { display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap; margin-top: 2rem; }
        .team-card { background: var(--dark-light); border-radius: var(--radius-lg); padding: 2rem 1.5rem; width: 320px; transition: var(--transition); border: 1px solid var(--glass-border); box-shadow: var(--shadow-sm); display: flex; flex-direction: column; align-items: center; }
        .team-card:hover { transform: translateY(-8px); box-shadow: var(--shadow-lg); border-color: var(--primary); }
        .team-avatar { width: 120px; height: 120px; border-radius: 50%; object-fit: cover; margin: 0 auto 1.5rem; border: 4px solid var(--primary); box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3); }
        .team-name { font-size: 1.4rem; margin-bottom: 0.25rem; color: var(--lighter); }
        .team-role { color: var(--primary); margin-bottom: 1rem; font-weight: 500; font-size: 0.95rem; }
        .team-bio { font-size: 0.9rem; color: var(--gray); margin-bottom: 1rem; line-height: 1.6; text-align: left; width:100%;}
        .team-skills { font-size: 0.85rem; color: var(--gray-dark); margin-bottom: 1.5rem; text-align: left; width:100%;}
        .team-skills strong { color: var(--gray); }
        .team-links { margin-top: auto; display: flex; flex-direction: column; align-items: center; gap: 0.5rem; width:100%;}
        .team-links .btn { width: 80%; justify-content: center; font-size: 0.85rem; padding: 8px 16px;}
        .team-social { display: flex; justify-content: center; gap: 1rem; margin-top: 1rem; }
        .team-social a { width: 36px; height: 36px; border-radius: 50%; background: var(--dark); display: flex; align-items: center; justify-content: center; transition: var(--transition); }
        .team-social a:hover { background: var(--primary); color: white; transform: translateY(-3px) scale(1.1); }

        .contact-cta-card { background: var(--gradient); color: white; text-align: center; padding: 3rem 2rem; border-radius: var(--radius-xl); max-width: 900px; margin: 0 auto; box-shadow: var(--shadow-lg); }
        .contact-cta-card h2 { color: white; margin-bottom: 1rem; font-size: 2.2rem; }
        .contact-cta-card p { margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto; font-size: 1.1rem; opacity: 0.9; }
        .contact-cta-card .btn-primary { background: white; color: var(--primary); font-size: 1.1rem; padding: 14px 28px; }
        .contact-cta-card .btn-primary:hover { background: var(--light); color: var(--primary-dark); }

        footer { background: var(--darker); padding: 4rem 5% 2rem; border-top: 1px solid var(--glass-border); position: relative; }
        .footer-content { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 2.5rem; }
        .footer-logo-container { display: flex; align-items: center; gap: 10px; margin-bottom: 1.5rem; }
        .footer-logo-container img { height: 30px; }
        .footer-logo-text { font-size: 1.5rem; font-weight: 700; background: var(--gradient); -webkit-background-clip: text; background-clip: text; color: transparent; }
        .footer-description { color: var(--gray); margin-bottom: 1.5rem; font-size: 0.95rem; line-height: 1.7; }
        .social-links { display: flex; gap: 1rem; }
        .social-link { width: 40px; height: 40px; border-radius: 50%; background: var(--dark-light); display: flex; align-items: center; justify-content: center; transition: var(--transition); }
        .social-link:hover { background: var(--primary); color: white; transform: translateY(-3px); }
        .footer-links h3 { color: var(--lighter); margin-bottom: 1.5rem; font-size: 1.2rem; position: relative; padding-bottom: 10px; }
        .footer-links h3::after { content: ''; position: absolute; bottom: 0; left: 0; width: 40px; height: 3px; background: var(--gradient); border-radius: 3px; }
        .footer-link { display: block; color: var(--gray); margin-bottom: 0.8rem; transition: var(--transition); padding: 5px 0; }
        .footer-link:hover { color: var(--primary); padding-left: 8px; }
        .footer-bottom { text-align: center; padding-top: 3rem; margin-top: 3rem; border-top: 1px solid var(--glass-border); color: var(--gray); font-size: 0.9rem; }
        .footer-bottom a { color: var(--primary); font-weight: 600; }
        .footer-bottom a:hover { text-decoration: underline; }

        .scroll-top { position: fixed; bottom: 30px; right: 30px; width: 50px; height: 50px; border-radius: 50%; background: var(--primary); color: white; display: flex; align-items: center; justify-content: center; cursor: pointer; opacity: 0; visibility: hidden; transition: var(--transition); box-shadow: var(--shadow-md); z-index: 999; border: none; outline: none; }
        .scroll-top.active { opacity: 1; visibility: visible; }
        .scroll-top:hover { background: var(--primary-dark); transform: translateY(-5px); box-shadow: var(--shadow-lg); }

        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
        .fade-in-up { opacity: 0; animation: fadeInUp 0.8s ease forwards; }
        .delay-1 { animation-delay: 0.2s; } .delay-2 { animation-delay: 0.4s; } .delay-3 { animation-delay: 0.6s; } .delay-4 { animation-delay: 0.8s; }

        .glow { position: absolute; width: 300px; height: 300px; border-radius: 50%; filter: blur(50px); z-index: 0; opacity: 0.7; }
        .glow-primary { background: radial-gradient(circle, rgba(67, 97, 238, 0.1), transparent 70%); }
        .glow-secondary { background: radial-gradient(circle, rgba(247, 37, 133, 0.08), transparent 70%); }
        #services .glow-primary { top: 10%; left: 5%; } #work .glow-secondary { bottom: 5%; right: 5%; }

        @media (max-width: 1200px) { .hero h1 { font-size: 2.8rem; } .hero p { font-size: 1.1rem; } }
        @media (max-width: 992px) { .nav-links { gap: 20px; } .logo-text { font-size: 1.3rem; } .btn-nav-cta { padding: 8px 16px; font-size: 0.85rem; } .hero h1 { font-size: 2.5rem; } .section-title { font-size: 2.2rem; } .services-grid, .work-grid { grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); } .team-card { width: 45%; } }
        @media (max-width: 768px) {
            .menu-toggle { display: block; }
            .nav-links { position: fixed; top: 70px; left: -100%; width: 100%; height: calc(100vh - 70px); background: var(--darker); flex-direction: column; align-items: center; justify-content: flex-start; gap: 1.5rem; padding-top: 2rem; transition: var(--transition); z-index: 999; }
            .nav-links.active { left: 0; }
            .nav-link { font-size: 1.1rem; }
            .btn-nav-cta { display: none; }
            .nav-links .btn-nav-cta-mobile { display: inline-flex; background: var(--primary); color: white; padding: 10px 24px; margin-top: 1rem; }
            .hero { padding: 120px 5% 60px; text-align: center; } .hero-text { margin: 0 auto; } .hero h1 { font-size: 2.2rem; } .hero p { font-size: 1rem; margin: 0 auto 2rem; } .cta-buttons { justify-content: center; }
            .section { padding: 80px 5%; } .section-title { font-size: 2rem; } .section-subtitle { font-size: 1rem; margin-bottom: 40px; }
            .team-grid { flex-direction: column; align-items: center; } .team-card { width: 90%; max-width: 350px; }
            .footer-content { grid-template-columns: 1fr; text-align: center; } .footer-links h3::after { left: 50%; transform: translateX(-50%); } .social-links { justify-content: center; } .footer-logo-container { justify-content: center; }
        }
        @media (max-width: 576px) { .hero h1 { font-size: 2rem; } .section { padding: 60px 5%; } .service-card, .work-card, .about-content, .approach-content, .contact-cta-card { padding: 1.5rem; } .contact-cta-card h2 { font-size: 1.8rem; } .footer-content { gap: 2rem; } .team-card { width: 100%; } }
    </style>
</head>

