        .hero-content { max-width: 1200px; margin: 0 auto; width: 100%; position: relative; z-index: 2; }
        .hero-text { max-width: 750px; }
        .hero h1 { font-size: 3.2rem; margin-bottom: 1.5rem; line-height: 1.2; }
        /* .hero h1 span { background: var(--gradient); -webkit-background-clip: text; background-clip: text; color: transparent; } */ /* Span removed from h1 */
