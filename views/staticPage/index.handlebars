        <!-- Floating AI elements -->
        <i class="fas fa-robot ai-element"></i>
        <i class="fas fa-brain ai-element"></i>
        <i class="fas fa-comment-dots ai-element"></i>
        <i class="fas fa-microchip ai-element"></i>

